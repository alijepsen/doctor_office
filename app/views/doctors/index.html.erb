<h1>Doctors</h1>

<table class="table table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Specialty</th>
      <th>Insurance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= link_to doctor.name, doctor %></td>
        <td><%= doctor.specialty %></td>
        <td><%= doctor.insurance %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Delete?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />

<div>
<%= link_to 'Add Doctor', new_doctor_path, class: "btn btn-primary" %>

<%= link_to 'Add Appointment for Doctor', new_appointment_path, class: "btn btn-info" %>
</div>

